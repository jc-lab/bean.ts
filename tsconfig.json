{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
